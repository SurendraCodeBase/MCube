<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@android:color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call From"
        android:id="@+id/ivrsCallFromLabel"
        android:textColor="@color/dark_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivrsCallFromTextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/ivrsCallFromLabel"
        android:layout_alignLeft="@+id/ivrsCallFromLabel"
        android:layout_alignStart="@+id/ivrsCallFromLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caller Name"
        android:id="@+id/ivrsCallerNameLabel"
        android:textColor="@color/dark_gray"
        android:layout_below="@+id/ivrsCallFromTextView"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivrsCallerNameTextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/ivrsCallerNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group"
        android:id="@+id/ivrsGroupNameLabel"
        android:textColor="@color/dark_gray"
        android:layout_below="@+id/ivrsCallerNameTextView"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivrsGroupNameTextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/ivrsGroupNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/ivrsDateLabel"
        android:textColor="@color/dark_gray"
        android:layout_alignTop="@+id/ivrsCallFromLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivrsDateTextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/ivrsDateLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/ivrsTimeLabel"
        android:textColor="@color/dark_gray"
        android:layout_alignTop="@+id/ivrsCallerNameLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivrsTimeTextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/ivrsTimeLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/ivrsStatusLabel"
        android:layout_alignTop="@+id/ivrsGroupNameLabel"
        android:layout_alignRight="@+id/ivrsTimeTextView"
        android:layout_alignEnd="@+id/ivrsTimeTextView"
        android:textColor="@color/dark_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivrsStatusTextView"
        android:layout_below="@+id/ivrsStatusLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black" />
</RelativeLayout>