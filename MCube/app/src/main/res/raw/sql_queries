<sql>

    <statement>
        CREATE TABLE IF NOT EXISTS ACCOUNT (
        _id INTEGER PRIMARY KEY AUTOINCREMENT,
        AUTH_KEY TEXT UNIQUE,
        BUSINESS_NAME TEXT,
        CODE INTEGER,
        EMP_CONTACT TEXT,
        EMP_EMAIL TEXT,
        EMP_NAME TEXT,
        MESSAGE TEXT,
        RECORD_LIMIT INTEGER
        )
    </statement>

